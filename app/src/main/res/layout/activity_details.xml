<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282a36"
    tools:context=".Activities.DetailsActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"

       android:padding="5dp">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:id="@+id/detailsImg"
           ></ImageView>

       <TextView
           android:layout_marginTop="5dp"
           android:layout_below="@id/detailsImg"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="20sp"
           android:gravity="center"
           android:id="@+id/detailsTitle"
           android:textColor="@android:color/holo_orange_dark"></TextView>

       <TextView
           android:layout_marginTop="5dp"
           android:layout_below="@id/detailsTitle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="20sp"
           android:gravity="right"
           android:id="@+id/detailsAuthor"
           android:textColor="@color/white"></TextView>


       <TextView
           android:layout_marginTop="10dp"
           android:layout_below="@id/detailsAuthor"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18sp"
           android:gravity="center_vertical"
           android:id="@+id/detailsDesc"
           android:textColor="@color/white"></TextView>

       <TextView
           android:layout_marginTop="10dp"
           android:layout_below="@id/detailsDesc"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18sp"
           android:text="More Details >>"
           android:gravity="center_vertical"
           android:id="@+id/moreDetails"
           android:textColor="@android:color/holo_blue_bright"></TextView>


   </RelativeLayout>



</ScrollView>